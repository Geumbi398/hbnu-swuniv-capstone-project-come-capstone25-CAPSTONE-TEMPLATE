<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication_github" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D9F2D0</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#275317</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#D9F2D0</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyApplication_github.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>


        <!-- AppBarOverlay 스타일 -->
        <style name="Theme.MyApplication_github.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

        <!-- PopupOverlay 스타일 (오른쪽 상단 메뉴 버튼 팝업) -->
        <style name="Theme.MyApplication_github.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
            <item name="android:textColorPrimary">#275317</item> <!-- 메뉴 글씨 색상: 초록색 -->
            <item name="android:textColorSecondary">#000000</item> <!-- 보조 글씨 색상: 검은색 -->
        </style>
    </resources>
